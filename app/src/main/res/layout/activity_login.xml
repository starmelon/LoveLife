    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/bg_divide" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="使用第三方帐号登录"
            android:textColor="#828282"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/bg_divide" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="注销"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_wechat_login"
            android:src="@drawable/wxicon"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            app:riv_corner_radius="30dip"
            app:riv_border_width="1dip"
            app:riv_border_color="@color/brown_gray"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />

        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btn_wechat_login"
            android:layout_alignLeft="@id/btn_wechat_login"
            android:layout_alignRight="@+id/btn_wechat_login"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="#828282"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_weibo_login"
            android:src="@drawable/weiboicon"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_toLeftOf="@id/btn_wechat_login"
            android:layout_centerVertical="true"
            app:riv_corner_radius="30dip"
            app:riv_border_width="1dip"
            app:riv_border_color="@color/brown_gray"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />

        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btn_weibo_login"
            android:layout_alignLeft="@id/btn_weibo_login"
            android:layout_alignRight="@+id/btn_weibo_login"
            android:gravity="center"
            android:text="微博登录"
            android:textColor="#828282"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_qq_login"
            android:src="@drawable/qqicon"
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_wechat_login"
            app:riv_corner_radius="30dip"
            app:riv_border_width="1dip"
            app:riv_border_color="@color/brown_gray"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />


        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btn_qq_login"
            android:layout_alignLeft="@id/btn_qq_login"
            android:layout_alignRight="@+id/btn_qq_login"
            android:gravity="center"
            android:text="QQ登录"
            android:textColor="#828282"/>
        
    </RelativeLayout>
    


</LinearLayout>