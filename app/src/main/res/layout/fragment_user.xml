<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/list_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/login_background"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_login"
            android:src="@drawable/login_head_default"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            app:riv_corner_radius="30dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#ffffff"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="立即登陆"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_user_lst_height"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:src="@drawable/night_mode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_comment"
            android:text="夜间模式"
            />

        <com.zcw.togglebutton.ToggleButton
            xmlns:toggle="http://schemas.android.com/apk/res-auto"
            android:id="@+id/togglebtn_daynight"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            toggle:tbOnColor="#3D81FC"
            toggle:tbOffColor="#ddd"
            toggle:tbSpotColor="#FFFFFF"
            toggle:tbOffBorderColor="@null"
            toggle:tbBorderWidth="2dp"
            android:textOff="白天">
        </com.zcw.togglebutton.ToggleButton>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/lst_divide" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_user_lst_height"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_setting"
            android:layout_marginLeft="10dp"
            android:text="设置" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleY="1.5"
            android:text=">"
            android:textSize="20sp" />
    </RelativeLayout>

