<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_tab_bottom"
	android:elevation="15dp"
	android:layout_width="fill_parent"
	android:layout_height="50dp"
	android:paddingTop="5dp"
	android:paddingBottom="3dp"
	android:background="?attr/tab_bottom_background">

	<LinearLayout
		android:id="@+id/main_tab_news"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:descendantFocusability="beforeDescendants"
		android:gravity="center"
		android:orientation="vertical" >

		<ImageButton
			android:id="@+id/main_tab_news_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:scaleType="centerInside"
			android:clickable="false"
			android:background="#00000000"
			android:src="@drawable/tab_news_normal" />

		<TextView
			android:id="@+id/main_tab_news_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:text="微信" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/main_tab_collection"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:descendantFocusability="beforeDescendants"
		android:gravity="center"
		android:orientation="vertical" >

		<ImageButton
			android:id="@+id/main_tab_collection_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:scaleType="centerInside"
			android:clickable="false"
			android:background="#00000000"
			android:src="@drawable/tab_collection_normal" />

		<TextView
			android:id="@+id/main_tab_collection_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:text="收藏" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/main_tab_user"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:descendantFocusability="beforeDescendants"
		android:gravity="center"
		android:orientation="vertical" >

		<ImageButton
			android:id="@+id/tab_main_center_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:scaleType="centerInside"
			android:clickable="false"
			android:background="#00000000"
			android:src="@drawable/tab_user_normal" />

		<TextView
			android:id="@+id/tab_main_center_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:text="我" />
	</LinearLayout>

</LinearLayout>